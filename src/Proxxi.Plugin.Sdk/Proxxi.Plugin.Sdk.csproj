<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>Proxxi.Plugin.Sdk</PackageId>
    <Authors>ImuS663</Authors>
    <Description>SDK for building Proxxi proxy source plugins</Description>
    <PackageTags>proxxi;proxy;plugin;sdk</PackageTags>
    <RepositoryUrl>https://github.com/ImuS663/proxxi.plugin.sdk</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <Version>$(GitVersion_NuGetVersion)</Version>
    <AssemblyVersion>$(GitVersion_AssemblySemVer)</AssemblyVersion>
    <FileVersion>$(GitVersion_AssemblySemFileVer)</FileVersion>
    <InformationalVersion>$(GitVersion_InformationalVersion)</InformationalVersion>

    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true"  PackagePath="/" />
    <None Include="../../build/Proxxi.Plugin.Sdk.targets" Pack="true" PackagePath="build/$(PackageId).targets" />
  </ItemGroup>
  
</Project>